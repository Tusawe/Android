<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tarjeta" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="colorPrimary">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="titulo" parent="Widget.AppCompat.Toolbar">

        <item name="android:textSize">18sp</item>
    </style>

    <style name="subtitulo" parent="Widget.AppCompat.Toolbar">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

</resources>
