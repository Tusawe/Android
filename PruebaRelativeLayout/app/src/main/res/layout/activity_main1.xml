<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Linear Layout"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/texto"
        android:background="#A3A3A3"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reminder name"
        android:layout_below="@+id/texto"
        android:id="@+id/textedit"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textedit"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/botonHora"
        android:text="Wed. June 27, 2012"
        android:id="@+id/botonFecha"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textedit"
        android:layout_alignParentRight="true"
        android:text="8:00 am"
        android:id="@+id/botonHora"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botonHora"
        android:layout_alignParentRight="true"
        android:text="Done"
        android:id="@+id/done"
        android:layout_margin="10dp"/>

</RelativeLayout>

